<% content_for :title, page_title("一覧") %>
<div class= "w-5/6 mx-auto max-w-screen-xl">
  <div class="text-lg mt-10 flex justify-center">
    <%= search_form_for @q do |f| %>
    <%= f.label :title, '検索'%>
    <%= f.search_field :title_cont, class: "input input-bordered" %>
    <%= f.submit '検索', class: "rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"%>
    <p class="text-sm">※記事詳細を確認する場合には、ログインが必要です。</p>
    <% end %>
  </div>

  <div class= "grid grid-cols-1 lg:grid-cols-3 gap-4 mt-6">
    <% if @articles.present? %>
      <% @articles.each do |article| %>
      <div class="p-4 border rounded-lg">
        <h2 class="text-xl mt-2"><%= link_to article.title, article_path(article) %></h2> 
        <h3 class="text-sm">作成日：<%= l article.created_at, format: :long%></h3>
        <h3 class="text-sm"><%= article.user.name %></h3>
      </div>
    <% end %>
    <% else %>
      <p>投稿がありません</p>
    <% end %>
  </div>

  <div class = "flex justify-center my-10 mb-20>
    <%= paginate @articles %>
  </div>
</div>

