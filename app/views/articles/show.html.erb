<div class= "w-5/6 mx-auto max-w-screen-xl ">
  <h1 class="text-3xl mt-20 flex justify-center"><%= @article.title %></h1>
  <h2 class="text-2xl mt-10 flex justify-center"><%= @article.body %></h2>

<div class= "flex justify-between mt-20 lg:justify-center lg:space-x-10">
<% if @article.created_by?(current_user)%>
  <%=link_to '編集', edit_article_path(@article)%>
  <%=link_to '削除', article_path(@article), data: { turbo_method: :delete, turbo_confirm: '投稿を削除しますか？' }%>
<% end %>

<% if @article.favorited?(current_user) %>
<div class="tooltip" data-tip="参考になった">
 <%=link_to article_favorite_path(@article.id), data: { turbo_method: :delete, type: :unlike_first }, class: "unlike-button" do %>
   <i class="bi bi-arrow-through-heart-fill"></i>
   <%= @article.favorites.count %>
<% end %>
</div>

<%=link_to article_favorite_path(@article.id), data: { turbo_method: :delete, type: :unlike_second }, class: "unlike-button" do %>
   <i class="bi bi-balloon-heart-fill"></i>
   <%= @article.favorites.count %>
<% end %>

<% else %>
  <%= link_to article_favorites_path(@article.id), data: { turbo_method: :post, type: :like_first }, class: "like-button" do %>
    <i class="bi bi-arrow-through-heart"></i>
    <%= @article.favorites.count %>
    <% end %>

     <%= link_to article_favorites_path(@article.id), data: { turbo_method: :post, type: :like_second }, class: "like-button" do %>
      <i class="bi bi-balloon-heart"></i>
    <%= @article.favorites.count %>
    <% end %>

<% end %>
</div>
</div>
